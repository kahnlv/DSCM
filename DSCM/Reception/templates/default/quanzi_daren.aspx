                        $('.mastt-eject').hide();
                        $eject.show();// 显示
                        // 清除timeout
                        clearTimeout(mastt_timer);
                        mastt_timer = null;
                    }, 500);
                })
        .mouseout(function () {
            // 鼠标移出
            // 获取需要显示的元素
            var $eject = $(this).parents('li').find('.mastt-eject');
            // 清除timeout
